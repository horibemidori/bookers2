<div class="container">
 <div class="row">

   <%= render 'books/list', book:@book %>
   <div class="offset-md-1">

   </div>
   <div class="col-md-8">
    <h2>Users</h2>
     <table class="table">
      <tr>
       <th>image</th>
       <th>name</th>
       <th></th>
      </tr>
      <tr>
       <% @users.each do |user| %>
       <td>
        <% if current_user.profile_image.attached? %>
         <%= link_to user_path(@book.user_id) do %>
          <%= image_tag @book.user.get_profile_image(105,105) %>
         <% end %>
        <% else %>
         <%= link_to user_path(@book.user_id) do %>
          <%= image_tag 'no_image', size:"105x105" %>
         <% end %>
        <% end %>
       </td>
       <td>
        <span><%= user.name %></span>
       </td>
       <td>
        <span>
         <%= link_to "Show", user_path(user.id) %>
        </span>
       </td>

      </tr>
      <% end %>
     </table>

  </div>
 </div>
</div>