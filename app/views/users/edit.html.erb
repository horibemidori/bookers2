<%= form_with model: @user do |f| %>
 <p>Name</p>
 <%= f.text_field :name %>
 <p>Image</p>
 <%= f.file_field :profile_image, accept: "image/*" %>
 <p>Introduction</p>
 <%= f.text_area :introduction %>
 <p><%= f.submit "Update User", class:"btn btn-secondary" %></p>
<% end %>

